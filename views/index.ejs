<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>Locale Editor</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/css/styles.css">

    </head>

    <body>
        <div class="container mt-5">
            <h1>Locale Editor</h1>
            <form action="/save" method="post" class="mb-3">
                <div class="row mb-3">
                    <div class="col">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="" disabled selected>Select category</option>
                            <% categories.forEach(category=> { %>
                                <option value="<%= category %>">
                                    <%= category %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="col">
                        <label for="key" class="form-label">Key</label>
                        <select class="form-select" id="key" name="key">
                            <option value="" disabled selected>Select key</option>
                        </select>
                    </div>
                </div>
                <div id="translations">
                    <% Object.keys(locales).forEach(function(language) { %>
                        <div class="mb-3">
                            <label for="value-<%= language %>" class="form-label">
                                <%= language.charAt(0).toUpperCase() + language.slice(1) %>
                            </label>
                            <input type="text" class="form-control" id="value-<%= language %>" name="<%= language %>">
                        </div>
                        <% }) %>
                </div>
                <button type="submit" class="btn btn-primary">Save all</button>
            </form>
            <h2>Code Editor</h2>
            <div class="code-editor">
                <% Object.keys(locales).forEach(function(language) { %>
                    <h3>
                        <%= language.charAt(0).toUpperCase() + language.slice(1) %>
                    </h3>
                    <textarea class="form-control code-area"
                        readonly><%= JSON.stringify(locales[language], null, 2) %></textarea>
                    <% }) %>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
        <script src="/js/script.js"></script>
    </body>

</html>